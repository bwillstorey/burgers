<div class="container">
  <div class="row">
    <div class="col-md-8">
        <h1>Burgers!</h1>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h2>Burgers that have NOT been devoured!</h2>

        {{!-- <img src="../public/assets/img/burger.png" alt="burger"> --}}

        <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burgers-block devoured=true}}
          {{/unless}}
        {{/each}}
        </ul>

    </div>
    <div class="col-md-4">
      <h2>Burgers that HAVE been devoured!</h2>

      <ul>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burgers-block devoured=false}}
          {{/if}}
        {{/each}}
      </ul>
    </div>
    <div class="col-md-4">
      <h2>Add a Burger</h2>

      <form class="create-form">

        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="burger_name">
        </div>
        <br>
        <div class="form-group">
          <label for="devouredy">Devoured? </label>
          <input type="radio" name="devoured" value="1" checked> Devoured!
          <input type="radio" name="devoured" value="0"> NOT Devoured!
          <br>
        </div>
        <br>
        <button type="submit">Add Burger</button>
        <p></p>
      </form>

    </div>
  </div>
</div>





